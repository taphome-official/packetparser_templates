        <Name>Mqtt Broker ${ipAddress}</Name>	
        <Value>192.168.0.1</Value>
        <Id>IpAddress</Id>
      </Parameter>
      <Parameter>
        <Name>Mqtt Broker port</Name>	
        <Value>1883</Value>
        <Id>Port</Id>
      </Parameter>
      <Parameter>
        <Name>Device ID</Name>	
        <Value></Value>
        <Id>dID</Id>
      </Parameter>
		</ImportParameters>
